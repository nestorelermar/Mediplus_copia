<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_shadow_popup"
    android:padding="10dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Editar"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/icono_editar_menu_popup"
        android:drawablePadding="8dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Eliminar"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/icono_eliminar_menu_popup"
        android:drawablePadding="8dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Ver info"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/icono_ver_menu_popup"
        android:drawablePadding="8dp"
        android:padding="8dp" />
</LinearLayout>

