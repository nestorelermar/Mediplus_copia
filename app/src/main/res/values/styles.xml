<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:statusBarColor">#FEFEFE</item>
    </style>
    <style name="color_barra" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Color de la barra de estado, fondo, etc. -->
        <item name="android:statusBarColor">#FEFEFE</item>
    </style>
    <style name="Style_input">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="Style_input_text_area">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <style name="Style_input_custom">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="Style_input_medium">
        <item name="android:background">@drawable/border</item>
        <item name="android:textColor">#767272</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="Style_button_con_icono">
        <!--<item name="android:background">@drawable/button</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">13dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="Style_button_sin_icono">
        <!--<item name="android:background">@drawable/button</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">52dp</item>
    </style>
    <style name="Style_button_medium">
        <!--<item name="android:background">@drawable/button</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="Style_button_medium_cancelar">
        <item name="android:background">@drawable/rounded_button_cancelar</item>
        <item name="android:textColor">@color/rojo</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">55dp</item>
    </style>
    <style name="Style_button_float">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">38dp</item>
    </style>
    <style name="Style_bar_superior">
        <item name="android:background">#FEFEFE</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>
    <style name="Style_bar_superior_menu">
        <item name="android:background">#F0F0F0</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
    </style>
    <style name="Style_bar_inferior">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#BD2222</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <!-- Añadir esto dentro del archivo styles.xml -->
    <style name="ToggleButtonOptionStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">114dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">@color/toggle_button_text_color</item> <!-- Color del texto según estado -->
        <item name="backgroundTint">@color/rojo</item> <!-- Color de fondo -->
        <item name="android:strokeColor">#CCCCCC</item> <!-- Color del borde no seleccionado -->
        <item name="android:strokeWidth">2</item> <!-- Ancho del borde -->
        <item name="cornerRadius">20dp</item> <!-- Borde redondeado -->
        <item name="android:textAllCaps">false</item>
        <item name="checkedIconTint">#FFFFFF</item> <!-- Color del ícono al estar seleccionado -->
    </style>
    <style name="CardStyle_medium">
        <item name="android:layout_height">122dp</item>
        <item name="android:layout_width">170dp</item>
        <!-- Ajusta el radio de las esquinas -->
        <item name="cardCornerRadius">10dp</item>
        <!-- Define la elevación para sombras -->
        <item name="cardElevation">4dp</item>
        <!-- Color de fondo de la tarjeta -->
        <item name="cardBackgroundColor">#FFFFFF</item>
        <!-- Margen exterior de la tarjeta -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding interno de la tarjeta -->
        <item name="contentPadding">16dp</item>
        <item name="android:textColor">#626565</item>
    </style>
    <style name="CardStyle_large">
        <item name="android:layout_height">106dp</item>
        <item name="android:layout_width">350dp</item>
        <!-- Ajusta el radio de las esquinas -->
        <item name="cardCornerRadius">10dp</item>
        <!-- Define la elevación para sombras -->
        <item name="cardElevation">4dp</item>
        <!-- Color de fondo de la tarjeta -->
        <item name="cardBackgroundColor">#FFFFFF</item>
        <!-- Margen exterior de la tarjeta -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding interno de la tarjeta -->
        <item name="contentPadding">16dp</item>
        <item name="android:textColor">#626565</item>
    </style>
    <style name="CardStyle_gray">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">350dp</item>
        <!-- Ajusta el radio de las esquinas -->
        <item name="cardCornerRadius">10dp</item>
        <!-- Color de fondo de la tarjeta -->
        <item name="cardBackgroundColor">#FFFFFF</item>
        <!-- Margen exterior de la tarjeta -->
        <item name="android:layout_margin">8dp</item>
        <!-- Padding interno de la tarjeta -->
        <item name="contentPadding">16dp</item>
        <item name="android:textColor">#626565</item>
    </style>
    <style name="PopupMenuTextStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:padding">8dp</item>
        <item name="android:minWidth">80dp</item>
    </style>
    <!-- style de selector de hora -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Cambia el color de los botones Cancelar y Aceptar -->
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
        <item name="colorAccent">@color/azul</item> <!-- Color del TimePickerDialog -->
        <item name="android:windowTitleStyle">@style/CustomDialogTitle</item>
    </style>
    <!-- Estilo para los botones Aceptar y Cancelar -->
    <style name="CustomDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/azul</item>
    </style>
    <!-- Estilo para el título del diálogo -->
    <style name="CustomDialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:background">@color/azul</item> <!-- Fondo rojo para el título -->
        <item name="android:textColor">#FFFFFF</item>  <!-- Texto blanco en el título -->
        <item name="android:textSize">20sp</item>      <!-- Tamaño del texto del título -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- Estilo para el PopupMenu -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:elevation">8dp</item>
        <item name="android:colorBackground">#FEFEFE</item>
        <item name="android:radius">50dp</item>
    </style>
    <!-- Estilo para el fondo del elemento seleccionado en el NavigationView -->
    <style name="NavigationGroupTitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>